# NAS Search Environment Configuration

# NAS Storage Path (adjust for your Unraid setup)
NAS_PATH=/mnt/user

# Solr Configuration
SOLR_HEAP=2g
SOLR_URL=http://localhost:8983/solr/nas_content

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8080

# Processing Configuration
MAX_WORKERS=4
BATCH_SIZE=100
PROCESSING_TIMEOUT=300

# Thumbnail Configuration
THUMBNAIL_SIZES=small:150x150,medium:300x300,large:800x600
THUMBNAIL_QUALITY=85

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json